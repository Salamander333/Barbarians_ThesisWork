@{
    ViewData["Title"] = "Battle Report";
}
@model Barbarians.ViewModels.Arena.BattleReportViewModel

<h5 class="text-center">Battle report:</h5>
<div class="text-center">
    @for (int i = 0; i < Model.BattleLog.Length; i++)
    {
        <span class="text-center">@Model.BattleLog[i]</span>
        <br />
    }
</div>

<div class="text-center">
    <input class="btn-primary" type="button" value="Return to character screen" onclick="location.href='@Url.Action("Index", "Character")'" />
</div>
